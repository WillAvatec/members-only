extends layout
block content
    h1 Sign up
    p Please fill the form:
    if errors
        .modal-errors
            ul
                each error in errors
                    li #{error.msg}
    form(action="" method="POST")
        .ipt-wrap
            label(for="firstName") First Name:
            input#firstName(type="text" name="firstName" minLength=1 placeholder="Joe, Andy, ..." value=(user?user.firstName:null) required)
            <br>
            label(for="lastName") Last Name:
            input#lastName(type="text" name="lastName" minLength=1 placeholder="Johnson" value=(user?user.lastName:null) required) 
            <br>
            label(for="username") Username:
            input#username(type="text" name="username" placeholder="joe-johnson@gmail.com" value=(user?user.username:null) required) 
            <br>
            label(for="password") Password:
            input#password(type="password" name="password" required) 
            <br>
            label(for="confirm-pass") Confirm your password: 
            input#confirm-pass(type="password" name="confirm-pass" required) 
            <br>
        button(type="submit") Submit